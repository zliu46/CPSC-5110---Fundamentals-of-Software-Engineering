@page "{id}"
@using ContosoCrafts.WebSite.Services
@inject JsonFilePawService PawService
@model ContosoCrafts.WebSite.Pages.Product.AddFeedbackModel
@{
    ViewData["Title"] = "Pawfect - Add Feedack";
}
<div class="content">
    <div class="card my-5">
        <div class="card-header">
            <h5 class="card-text"> Add Feedback </h5>
        </div>
        <form method="post">
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="message" class="form-label"> Message </label>
                    <textarea asp-for="message" class="form-control" id="message"></textarea>
                    <span asp-validation-for="message" class="text-danger"></span>
                </div>
            </div>
            <div class="card-footer">
                <input type="submit" class="btn btn-danger" value="Post Message" />
                <a class="btn btn-primary" asp-page="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>